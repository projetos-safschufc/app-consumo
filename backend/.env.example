# Configuração da aplicação
# Produção: use APP_HOST=0.0.0.0 para aceitar conexões em qualquer interface (ex.: http://10.28.0.124)
APP_HOST=0.0.0.0
# Porta do backend (variável). Produção: ex. 5001 ou 80 se atrás de proxy reverso
APP_PORT=5000
NODE_ENV=development
APP_DEBUG=false

# CORS - separar múltiplas origens por vírgula
# Produção: inclua a URL do frontend (ex.: http://10.28.0.124, http://10.28.0.124:80)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Configuração dos bancos PostgreSQL (dois pools)
# Credenciais compartilhadas (PowerBI + SAFS)
# Para senha com #, ! ou @: use DB_PASSWORD_FILE (caminho para arquivo com a senha, ou valor entre aspas)
DB_HOST=pgpool1.ebserh
DB_USER=seu_usuario
DB_PASSWORD_FILE=.env.password
DB_SSLMODE=prefer
DB_SCHEMA=ctrl

# PowerBI (consumo) – gad_dlih_safs.v_df_movimento – porta 5432
DB_PORT=5432
DB_NAME=powerbi

# SAFS (alertas + ctrl.safs_catalogo) – porta 5433
# Acesso a ctrl.safs_catalogo usa: DB_HOST, DB_USER, DB_PASSWORD_FILE, DB_SAFS_PORT, DB_SAFS_DATABASE, DB_SCHEMA
DB_SAFS_PORT=5433
DB_SAFS_DATABASE=safs

# SMTP (alertas por e-mail) – Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=safs.chufc@gmail.com
# Senha de app do Gmail (2FA). Ou use SMTP_PASSWORD_FILE=caminho para arquivo com a senha.
SMTP_PASSWORD=sua_app_password
EMAIL_FROM=safs.chufc@gmail.com

# Cron: dias 6, 16 e 25 de cada mês às 08:00
ALERT_CRON_SCHEDULE=0 8 6,16,25 * *
